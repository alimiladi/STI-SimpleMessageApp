<!DOCTYPE html>

<html lang="en">
<head>
  <meta charset="utf-8">


  <title>Mailbox</title>


</head>
<body>
<h2>Sent messages<h2/>

                    <?php

                      session_start();

                      if(!isset($_SESSION['login_user']))
                      {
                        header("location: login.php");
                      }
                      else
                      {
                        $username = $_SESSION['login_user'];
                      }

                     
                      // Create (connect to) SQLite database in file
                      $db = new PDO('sqlite:/var/www/databases/database.sqlite');

                      // Set errormode to exceptions
                      $db->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);

                      //get user id
                      $result = $db->query("SELECT id FROM users WHERE username = '$username';");
                      $user = $result->fetch();
                      $id_user = $user['id'];

                      // retrieve the received messages
                      $result = $db->query("SELECT * FROM messages WHERE sender_id = '$id_user' ORDER BY time");

                      while($message = $result->fetch())
                      {
                        //retrieve sender identity
                        $id_sender = $message['receiver_id'];
                        $result_sender = $db->query("SELECT username FROM users WHERE id = '$id_sender'");
                        $sender = $result_sender->fetch();

                        // display messages in the table
                        echo '<tr class="">
                            <td class="view-message">' . $sender['username'] . '</td>
                            <td class="view-message dont-show">' . $message['title'] . '</td>
                            <td class="view-message">' . $message['time'] . '</td>
                            <td>
                              
<a class ="btn btn-default" href="message.php?message_id='. $message['id'] . '">Details</a>
                              <a class = "btn btn-default" href="delete_message.php?message_id='. $message['id'] . '">Delete</a> <br/>
                            </td>
                        </tr>';
                     }

?>

</body>
</html>
